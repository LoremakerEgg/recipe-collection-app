generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AllRecipes {
  id                  Int                   @id @unique
  recipeTitle         String
  recipeImageURL      String
  cookingTime         Int
  servings            Int
  randomId            Int                   @default(autoincrement())
  CookingInstructions CookingInstructions[]
  Ingredients         Ingredients[]
}

model CookingInstructions {
  instructionId Int        @id @unique
  instructions  String
  recipe        AllRecipes @relation(fields: [recipeId], references: [id])
  recipeId      Int
}

model Ingredients {
  ingredientId Int        @id @unique
  recipe       AllRecipes @relation(fields: [recipeId], references: [id])
  recipeId     Int
  ingredient   String
  amount       String
}
